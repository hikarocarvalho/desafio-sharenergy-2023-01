generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DbUser {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  customer        DbCustomer  @relation(fields: [customerId],references: [id])
  customerId      String      @unique  @db.ObjectId
  name            String      @unique
  password        String
  createAt        DateTime?                                                     @default(now())
  deleteAt        DateTime?

  @@map("user")
}

model DbCustomer{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  cpf           String    @unique
  email         String    @unique
  telPhone      String
  postCode      String
  addressNumber String
  street        String
  block         String
  city          String
  state         String
  complement    String
  users         DbUser?
  createAt      DateTime?            @default(now())
  deleteAt      DateTime?

  @@map("customer")
}